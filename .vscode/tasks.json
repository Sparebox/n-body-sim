{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc.exe build active file",
			"command": "D:\\Ohjelmat\\Omat_ohjelmat_c\\Tools\\mingw\\mingw64\\bin\\gcc.exe",
